<div class="container">
<button type="button" value="all_button" name="all_button" id="all_button", class='btn btn-primary btn-lg btn-block'>
  一括で降る
</button>
<table class="table table-striped table-bordered">
  <tr>
    <td>
      能力
    </td>
    <td>
      dice
    </td>
    <td>
      能力値
    </td>
  </tr>
  <tr>
    <td>
      STR
    </td>
    <td>
      <%= button_to('3d6',characters_three_path, method: :get, id: :str_button, :remote=>true,class: "btn btn-primary")   %>
    </td>
    <td id="str">
    </td>
  </tr>
  <tr>
    <td>
      CON
    </td>
    <td>
      <%= button_to('3d6',characters_three_path, method: :get, id: :con_button, :remote=>true, class: "btn btn-primary")   %>
    </td>
    <td id="con">

    </td>
  </tr>
  <tr>
    <td>
      POW
    </td>
    <td>
      <%= button_to('3d6',characters_three_path, method: :get, id: :pow_button, :remote=>true, class: "btn btn-primary") %>
    </td>
    <td id="pow">

    </td>
  </tr>
  <tr>
    <td>
      DEX
    </td>
    <td>
      <%= button_to('3d6',characters_three_path, method: :get, id: :dex_button, :remote=>true, class: "btn btn-primary") %>
    </td>
    <td id="dex">

    </td>
  </tr>
  <tr>
    <td>
      APP
    </td>
    <td>
      <%= button_to('3d6',characters_three_path, method: :get, id: :app_button, :remote=>true, class: "btn btn-primary") %>
    </td>
    <td id="app">

    </td>
  </tr>
  <tr>
    <td>
      SIZ
    </td>
    <td>
      <%= button_to('2d6+6',characters_two6_path, method: :get, id: :siz_button, :remote=>true,class: "btn btn-primary") %>
    </td>
    <td id="siz">

    </td>
  </tr>
  <tr>
    <td>
      INT
    </td>
    <td>
      <%= button_to('2d6+6',characters_two6_path, method: :get, id: :int_button, :remote=>true, class: "btn btn-primary") %>
    </td>
    <td id="int">

    </td>
  <tr>
    <td>
      EDU
    </td>
    <td>
      <%= button_to('3d6+3',characters_three3_path, method: :get, id: :edu_button, :remote=>true, class: "btn btn-primary") %>
    </td>
    <td id="edu">

    </td>
  </tr>
  </tr>
</table>
<%= form_for @character, :url=>{:action => 'skill_set'} do |f| %>
  <%= f.hidden_field :str %>
  <%= f.hidden_field :con %>
  <%= f.hidden_field :pow %>
  <%= f.hidden_field :dex %>
  <%= f.hidden_field :app %>
  <%= f.hidden_field :siz %>
  <%= f.hidden_field :int %>
  <%= f.hidden_field :edu %>

  <%= f.submit "キャラクターを作成する", class:'btn btn-primary btn-lg btn-block'%>
<% end %>
</div>
<%= javascript_include_tag 'characters_three.js' %>