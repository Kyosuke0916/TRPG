<!DOCTYPE html>
<html>
<head>
  <title>TRPG</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "TRPG", "/static_pages/home" , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "home",   "/static_pages/home" %></li>
        <li><%= link_to "help",   "/static_pages/help" %></li>
        <li><%= link_to "about",   "/static_pages/about" %></li>
        <% if logged_in? %>
          <li><%= link_to "ログアウトだよ！", "/sessions/destroy", :method => :delete %></li>
        <% else %>
          <li><%= link_to "ログインだよ！", "/sessions/new" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
